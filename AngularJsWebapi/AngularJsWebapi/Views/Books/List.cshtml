
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div>
    <a href="#/create" class="btn">Create</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Id</th>
            <th>ISBN</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Description</th>
            <th>Contributor</th>
            <th>Language</th>
            <th>Publication Date</th>
          </tr>
        <tr ng-repeat="item in Books">
            <td>{{ item.Id }}</td>
            <td>{{ item.ISBN }}</td>
            <td>{{ item.Title }}</td>
            <td>{{ item.Subtitle }}</td>
            <td>{{ item.Description}}</td>
            <td>{{ item.Contributor }}</td>
            <td>{{ item.Language }}</td>
            <td>{{ item.PublicationDate }}</td>
            
            <td>
                <a href="#/edit/{{item.Id}}" class="glyphicon glyphicon-edit"></a>
            </td>
            <td>
                <a href="#/delete/{{item.Id}}" class="glyphicon glyphicon-trash"></a>
            </td>
        </tr>
    </table>
</div>  